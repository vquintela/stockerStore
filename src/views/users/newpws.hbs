<div class="row w-100">
    {{>sidebar}}
    <div class="col-md-10">
        <div class="row" id="App">
            <div class="col-md-4 mx-auto mt-5">
                <div class="card text-center">
                    <div class="card-header">
                        <h3>Cambio de Password</h3>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/users/newpws/{{user._id}}">
                            <div class="form-group">
                                <input type="text" placeholder="{{user.email}}" class="form-control" readonly>
                            </div>
                            <div class="form-group">
                                <input type="password" name="passwordActual" placeholder="Password Actual"
                                    class="form-control" value={{e.passwordActual}}>
                            </div>
                            <div class="form-group">
                                <input type="password" name="nuevaPass" placeholder="Nueva Password"
                                    class="form-control" value={{e.nuevaPass}}>
                            </div>
                            <div class="form-group">
                                <input type="password" name="repNuevaPass" placeholder="Reingrese la nueva Password"
                                    class="form-control" value={{e.repNuevaPass}}>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block btn-sm" value="Registrar">Cambiar
                                    Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>