<div class="row w-100">
    {{>sidebar}}
    <div class="col-md-10">
        <div class="col-md-4 mx-auto mt-3 mb-3">
            <div class="card text-center">
                <div class="card-header">
                    <h3>{{titulo}}</h3>
                </div>
                <div class="card-body">
                    <form method="POST" action="{{accion}}">
                        <div class="form-group">
                            <input type="text" name="nombre" id="nombre" placeholder="Nombre" class="form-control" value="{{usuario.nombre}}">
                            <span class="text-danger">{{e.nombre}}</span>
                        </div>
                        <div class="form-group">
                            <input type="text" name="apellido" id="apellido" placeholder="Apellido" class="form-control" value="{{usuario.apellido}}">
                            <span class="text-danger">{{e.apellido}}</span>
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" id="email" placeholder="Email" class="form-control" value="{{usuario.email}}" {{#if leer}}readonly{{/if}}>
                            <span class="text-danger">{{e.email}}</span>
                        </div>
                        <div class="form-group">
                            <input type="text" name="cuit" placeholder="Cuit" class="form-control" value="{{usuario.cuit}}">
                            <span class="text-danger">{{e.cuit}}</span>
                        </div>
                        <div class="form-group">
                            <input type="text" name="dni" placeholder="Dni" class="form-control" value="{{usuario.dni}}">
                            <span class="text-danger">{{e.dni}}</span>
                        </div>
                        <div class="form-group">
                            <select name="role" id="role" class="form-control">
                                {{#if usuario.role}}
                                <option>{{usuario.role}}</option>
                                {{/if}}
                                <option>Rol</option>
                                {{#each roles as |item|}}
                                <option>{{item}}</option>
                                {{/each}}
                            </select>
                            <span class="text-danger">{{e.role}}</span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">{{boton}}</button>
                            <a href="/users" class="btn btn-sm btn-light">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>