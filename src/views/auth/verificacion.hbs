<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card text-center">
                {{#if valor}}
                <div class="card-header">
                    <h3>Gracias por Registrarse</h3>
                    <br>
                    <h4>{{mensaje}}</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <h5>Ingrese al sistema para disfrutar de Ey-Commerce</h5>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-success" href="/signin">Ingrese al Sistema</a>
                    </div>
                </div>
                {{else}}
                <div class="card-header">
                    <h3>Ingreso al Sistema no valido</h3>
                    <br>
                    <h4>{{mensaje}}</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <h5>Por favor registrese nuevamente</h5>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-danger" href="/signup">Registrese</a>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>