<div class="container p-4" id="contenedor">
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <div class="card text-center back-signin">
                <div class="card-header">
                    <h3>StockerStore</h3>
                </div>
                <div class="card-body">
                    <img src="/img/logostocker.PNG" alt="Logo" class="card-img-top mx-auto m-3 w-50">
                    <form method="POST" action="/signin">
                        <div class="form-group">
                            <input type="text" id="email" name="email" placeholder="Email" class="form-control bg-transparent">
                        </div>
                        <div class="form-group">
                            <input type="password" id="password" name="password" placeholder="Password" class="form-control bg-transparent">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block btn-sm">Ingresar</button>
                        </div>
                        <div class="form-group">
                            <a href="#" id="renewPass">¿Olvido su contraseña?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/signin.js"></script>